<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <title>Shoes Plus</title>
    </head>
    <body><center>
      <div class='page-header'>
           <h1>Stores<small>Brands</small></h1>
       </div>
        {% if brands is not empty %}

            <p>Here are all your Brands</p>
            <ul>
                {% for brand in brands %}
                    <p><a href='/brands/{{ brand.getId }}'>{{ brand.getBrandName }}</a></p>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/brands' method='post'>
            <label for='brand_namen'>Brands</label>
            <input id='brand_name' name='brand_name' type='text'>

            <button type='submit' class='btn btn-success btn-xs'>Add Brand</button>
        </form>
        <form action='/delete_brands' method='post'>
            <button type='submit' class="btn btn-default btn-sm">Delete Brands</button>
        </form>
        <p><button type='submit' class='btn btn-default btn-sm'><a href='/'>Home</a></button></p>

    </center></body>
</html>
